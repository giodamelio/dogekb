doctype html
html(lang="en", ng-app="dogekb")
    head
        title DogeKB

        //- Bootstrap core CSS 
        link(href="/vendor/bootstrap/css/bootstrap.min.css", rel="stylesheet")

        //- My CSS
        link(href="/main.css", rel="stylesheet")
    body
        div.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
            div.container
                div.navbar-header
                    a.navbar-brand(href="#") DogeKB
                div.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href="#") Home
                        li
                            a(href="#about") About
                        li
                            a(href="#contact") Contact
        div(ng-controller="helloWorld").container
            div(ng-class="{red: isRed}").starter-template
                h1 Hello World!
                button(ng-click="toggleRedness()") Toggle Redness

        //- Angularjs
        script(src="/vendor/angular/angular.min.js")

        //- My js
        script(src="/main.js")
